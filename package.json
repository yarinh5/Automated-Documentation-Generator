{
  "name": "automated-documentation-generator",
  "version": "1.0.0",
  "description": "AI-powered documentation generator with semantic search capabilities",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "format:check": "prettier --check src/**/*.ts",
    "clean": "rimraf dist",
    "prebuild": "npm run clean",
    "prepublishOnly": "npm run build",
    "demo": "ts-node examples/demo.ts",
    "examples": "ts-node examples/usage-examples.ts",
    "cli": "ts-node src/cli/index.ts",
    "docker:build": "docker build -t auto-docs .",
    "docker:run": "docker run -v $(pwd):/workspace -e OPENAI_API_KEY=$OPENAI_API_KEY auto-docs",
    "docker:search": "docker-compose --profile search run --rm auto-docs-search",
    "docker:generate": "docker-compose --profile generate run --rm auto-docs",
    "docker:init": "docker-compose --profile init run --rm auto-docs-init"
  },
  "keywords": [
    "documentation",
    "ai",
    "gpt-4",
    "semantic-search",
    "embeddings",
    "automation"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "openai": "^4.20.1",
    "commander": "^11.1.0",
    "chalk": "^5.3.0",
    "ora": "^7.0.1",
    "glob": "^10.3.10",
    "fs-extra": "^11.1.1",
    "typescript": "^5.3.2",
    "@types/node": "^20.10.0",
    "ts-node": "^10.9.1",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.8",
    "eslint": "^8.55.0",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "prettier": "^3.1.0",
    "rimraf": "^5.0.5"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/rimraf": "^3.0.2"
  }
}
